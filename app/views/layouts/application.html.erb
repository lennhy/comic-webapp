<!DOCTYPE html>
<html>
  <head>
    <title>ComicWebapp</title>
    <%= csrf_meta_tags %>

    <% if user_signed_in? %>
        <%= link_to("Sign Out", destroy_user_session_path, method: :delete) %>
    <% end %>

    <% if !user_signed_in? %>
      <%= link_to("Sign Up", new_user_registration_path) %>
    <% end %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <div ng-app="app" ng-controller="ComicsController">Hello {{ name }}</div>

    <%= yield %>
  </body>
</html>
